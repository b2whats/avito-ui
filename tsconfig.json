{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "./packages",
    "paths": {
      "@avito/*/icons": ["../node_modules/@avito/*/src/components/Icon/icons"],
      "@avito/*": ["../node_modules/@avito/*/src"],
    },
  },
  "exclude": ["node_modules", "packages/**/build", "packages/**/cjs", "packages/**/es", "packages/**/types"]
}