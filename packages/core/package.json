{
  "name": "@avito/core",
  "version": "0.0.2",
  "private": false,
  "description": "Shared utilities for desktop / mav versions of avito design system",
  "author": "vyuklepov <vyuklepov@avito.ru>",
  "license": "MIT",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build",
    "src"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "build": "yarn clean && yarn build:js && yarn build:types",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build:js": "cross-env NODE_ENV=production babel src --out-dir build --extensions \".ts,.tsx\" --source-maps --root-mode=upward",
    "clean": "rm -rf ./build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "yarn build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@avito/icons": "^0.0.7",
    "@avito/tokens": "^0.0.9",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "deepmerge": "^4.2.2",
    "emotion": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "scroll-into-view-if-needed": "^2.2.20"
  },
  "gitHead": "9f03c72dc8beb6b4d6658d05b568654c152165d2"
}
