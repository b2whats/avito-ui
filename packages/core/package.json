{
  "name": "@avito/core",
  "version": "0.0.32",
  "repository": {
    "type": "git",
    "url": "http://stash.msk.avito.ru/projects/MDS/repos/ui-web-components",
    "directory": "packages/core"
  },
  "private": false,
  "description": "Shared utilities for desktop / mav versions of avito design system",
  "author": "vyuklepov <vyuklepov@avito.ru>",
  "license": "MIT",
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "types/index.d.ts",
  "typesVersions": {
    "*": {
      "cjs/*": [
        "types/*"
      ],
      "esm/*": [
        "types/*"
      ]
    }
  },
  "files": [
    "cjs",
    "esm",
    "types",
    "icons"
  ],
  "scripts": {
    "build": "yarn build:cjs & yarn build:esm & yarn build:types",
    "build:types": "rm -rf ./types && tsc -p tsconfig.json --emitDeclarationOnly",
    "build:cjs": "cross-env NODE_ENV=production BABEL_ENV=cjs babel src --out-dir cjs --extensions \".ts,.tsx\" --source-maps --root-mode=upward --delete-dir-on-start",
    "build:esm": "cross-env NODE_ENV=production BABEL_ENV=esm babel src --out-dir esm --extensions \".ts,.tsx\" --source-maps --root-mode=upward --delete-dir-on-start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "yarn build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@avito/tokens": "^0.0.23",
    "@emotion/cache": "^10.0.29",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@popperjs/core": "^2.4.2",
    "create-emotion-server": "^10.0.27",
    "deepmerge": "^4.2.2",
    "emotion": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "react-spring": "^9.0.0-rc.3",
    "rifm": "^0.12.0",
    "scroll-into-view-if-needed": "^2.2.20"
  },
  "gitHead": "1207b77319e0691dc6276f1983ed2180eb5464f3"
}
