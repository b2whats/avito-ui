{
  "name": "@avito/bundle-analyzer",
  "private": true,
  "version": "1.0.0",
  "description": "Analyze @avito/* bundle sizes",
  "author": "vyuklepov <vyuklepov@avito.ru>",
  "license": "ISC",
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@stash.msk.avito.ru:7999/mds/ui-web-components.git"
  },
  "scripts": {
    "build:packages": "cross-env TARGET=bundle webpack",
    "stats": "cross-env TARGET=bundle webpack --json > stats.json",
    "size:compressed": "yarn build:packages > /dev/null && for file in dist/*.js; do echo $file\\\\t$(gzip -c $file | wc -c) bytes ; done"
  },
  "devDependencies": {
    "babel-loader": "^8.1.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^4.0.0-beta.2",
    "webpack-visualizer-plugin": "^0.1.11"
  }
}
